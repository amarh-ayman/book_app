<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>books</title>
  <link rel="stylesheet" href="styles/layout.css">
</head>

<body>
  <%- include('./layouts/header') %>

    <div>
      <h2>Saved Books</h2><br>
      <h2>Number of Books are : <%=booksChosen.length%>
      </h2>
    </div>
    <main class="container">
      <div class="divForEachbookSection">
        <% booksChosen.forEach(book=>{ %>
          <section>
            <img src="<%=book.img%>">
          </section>
          <h2>
            <%=book.title%>
          </h2>
          <h4>
            <%=book.author%>
          </h4>
          <!-- <p>
            <%=book.description %>
          </p> -->
          <h3>
            <%=book.isbn %>
          </h3>

          <form action="/books/<%=book.id%>">
            <button type="submit">View Detailes</button>
          </form>
          <% }) %>
      </div>

    </main>
</body>

</html>